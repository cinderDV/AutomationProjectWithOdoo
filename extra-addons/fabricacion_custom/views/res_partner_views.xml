<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_sales_channel" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.sales.channel</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Agregar despuÃ©s del campo name (nombre del contacto) -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="x_sales_channel" widget="badge" placeholder="Seleccione canal de venta"/>
            </xpath>
        </field>
    </record>

    <!-- Agregar a vista de lista -->
    <record id="view_partner_tree_inherit_sales_channel" model="ir.ui.view">
        <field name="name">res.partner.tree.inherit.sales.channel</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="x_sales_channel" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
