<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inherit_marketplace_skus" model="ir.ui.view">
        <field name="name">product.template.form.inherit.marketplace.skus</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Agregar grupo dentro de la página de información general -->
            <xpath expr="//page[@name='general_information']" position="inside">
                <group string="SKUs de Marketplaces" name="marketplace_skus">
                    <field name="x_sku_falabella" placeholder="FAL-XXXX-XXXX"/>
                    <field name="x_sku_ripley" placeholder="RIP-XXXX-XXXX"/>
                    <field name="x_sku_paris" placeholder="PAR-XXXX-XXXX"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Agregar campos a la vista de lista también -->
    <record id="view_product_template_tree_inherit_marketplace_skus" model="ir.ui.view">
        <field name="name">product.template.tree.inherit.marketplace.skus</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="x_sku_falabella" optional="hide"/>
                <field name="x_sku_ripley" optional="hide"/>
                <field name="x_sku_paris" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
