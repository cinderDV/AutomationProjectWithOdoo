<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_form_inherit_return_management" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.return.management</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Agregar campos al final del formulario -->
            <xpath expr="//form" position="inside">
                <group string="Gestión de Devolución" name="return_management">
                    <field name="x_return_process"/>
                    <field name="x_responsible_worker_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
