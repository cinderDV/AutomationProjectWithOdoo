<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_form_inherit_return_management" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.return.management</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Agregar campos de gestión de devolución después del campo origin -->
            <xpath expr="//field[@name='origin']" position="after">
                <field name="x_return_process" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                <field name="x_responsible_worker_id" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
