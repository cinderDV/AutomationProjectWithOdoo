<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_scrap_form_inherit_incident_tracking" model="ir.ui.view">
        <field name="name">stock.scrap.form.inherit.incident.tracking</field>
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_form_view2"/>
        <field name="arch" type="xml">
            <!-- Agregar campos al final del formulario -->
            <xpath expr="//form" position="inside">
                <group string="AnÃ¡lisis del Incidente" name="incident_analysis">
                    <group>
                        <field name="x_incident_type"/>
                        <field name="x_area_occurrence"/>
                    </group>
                    <group>
                        <field name="x_action_taken"/>
                        <field name="x_economic_impact"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Vista de lista -->
    <record id="view_stock_scrap_tree_inherit_incident_tracking" model="ir.ui.view">
        <field name="name">stock.scrap.tree.inherit.incident.tracking</field>
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="x_incident_type" optional="show"/>
                <field name="x_economic_impact" optional="show"/>
                <field name="x_action_taken" optional="hide"/>
                <field name="x_area_occurrence" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
