<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_inherit_delay_tracking" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.delay.tracking</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Agregar grupo de seguimiento de retrasos -->
            <xpath expr="//group[@name='order_details']" position="after">
                <group name="delay_tracking" string="Seguimiento de Retrasos">
                    <field name="x_external_order_id" readonly="1"/>
                    <field name="x_delay_status" widget="badge"
                           decoration-success="x_delay_status == 'on_time'"
                           decoration-warning="x_delay_status == 'delayed_1_3'"
                           decoration-danger="x_delay_status == 'delayed_3_plus'"/>
                    <field name="x_delay_days" readonly="1"/>
                    <field name="x_stuck_area"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Vista de lista con indicadores visuales -->
    <record id="view_sale_order_tree_inherit_delay_tracking" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.delay.tracking</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="x_delay_status"
                       decoration-success="x_delay_status == 'on_time'"
                       decoration-warning="x_delay_status == 'delayed_1_3'"
                       decoration-danger="x_delay_status == 'delayed_3_plus'"
                       optional="show"/>
                <field name="x_delay_days" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
